<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".DynamicOptionMenu">

    <LinearLayout
        android:layout_margin="@dimen/space"
        android:background="@drawable/dynamic_option_menus_bg"
        android:padding="@dimen/def_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            style="@style/MyTextHeader"
            android:layout_marginTop="0dp"
            android:text="MyTextHeader" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space"
            android:background="@drawable/background_dynamic_menus"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/et_Search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_dynamic_menus"
                android:drawableStart="@drawable/ic_search_normal"
                android:drawableLeft="@drawable/ic_search_normal"
                android:drawablePadding="@dimen/def_margin_half"
                android:hint="Search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="@dimen/def_margin_half"
                android:singleLine="true"
                android:textSize="@dimen/h4" />

            <ImageButton
                android:id="@+id/btn_Scan_Barcode2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/def_margin_half"
                android:layout_marginLeft="@dimen/def_margin_half"
                android:visibility="invisible" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/def_margin"
            android:background="@drawable/corner_rv"
            android:overScrollMode="never"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:visibility="gone"
            tools:itemCount="3"
            tools:listitem="@layout/item__dynamicoptionsmenu_selected"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space"
            android:background="@drawable/corner_rv"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_half"
                android:layout_marginTop="@dimen/space_half"
                android:layout_marginEnd="@dimen/space_half"
                android:layout_marginBottom="@dimen/space_half"
                app:cardCornerRadius="@dimen/radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/MyTextContent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="No Data" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_option"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space"
            android:background="@drawable/corner_rv"
            android:overScrollMode="never"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            tools:itemCount="3"
            tools:listitem="@layout/item__dynamicoptionsmenu" />

    </LinearLayout>
</LinearLayout>